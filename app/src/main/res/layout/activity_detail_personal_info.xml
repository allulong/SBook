<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.logn.titlebar.TitleBar
        android:id="@+id/person_info_title_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/cyan"
        app:leftButtonBackground="@drawable/addreturn"
        app:titleBarText="个人信息">

    </com.logn.titlebar.TitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_view_line_down"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="名称："
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/person_info_username"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:hint="名称"
            android:paddingLeft="12dp"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_view_line_down"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="电话："
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/person_info_phone"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:hint="电话"
            android:paddingLeft="12dp"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_view_line_down"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="地址："
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/person_info_address"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:hint="地址"
            android:paddingLeft="12dp"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_view_line_down"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="性别："
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/person_info_sex"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:hint="性别"
            android:paddingLeft="12dp"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>