    <com.logn.titlebar.TitleBar
        android:id="@+id/add_titlebar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/cyan"
        app:leftButtonBackground="@drawable/addreturn"
        app:titleBarText="出售书籍"
        ></com.logn.titlebar.TitleBar>
    <!--ISBN-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="ISBN:"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:textColor="@color/black"
            android:id="@+id/isbn_edit"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="请直接输入或点击右侧图标扫描"
            android:textColorHint="@color/gray" />

        <ImageButton
            android:id="@+id/isbn_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:src="@drawable/isbn_search_pressed" />

        <ImageButton
            android:id="@+id/isbn_qrcode"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:src="@drawable/isbn_qrcode_pressed" />
    </LinearLayout>

    <!--书本信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <!--Book Cover-->
        <ImageButton
            android:id="@+id/add_book_image"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:background="#eee"
            android:padding="5dp"
            android:src="@drawable/defaultcover" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/add_book_name"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:hint="书名"
                android:textColorHint="@color/gray"
                android:textSize="15sp" />
            <!--分割线-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:src="@drawable/strightline"/>
            <EditText
                android:id="@+id/add_book_author"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="37dp"
                android:gravity="center_vertical"
                android:hint="作者"
                android:textColorHint="@color/gray"
                android:textSize="15sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:src="@drawable/strightline"/>
            <EditText
                android:id="@+id/add_book_publisher"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="37dp"
                android:gravity="center_vertical"
                android:hint="出版社"
                android:textColorHint="@color/gray"
                android:textSize="15sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:src="@drawable/strightline"/>
            <EditText
                android:id="@+id/add_book_oldprice"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:hint="原价"
                android:inputType="number"
                android:textColorHint="@color/gray"
                android:textSize="15sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:src="@drawable/strightline"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="出售价："
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
            <EditText
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:inputType="number"
                android:id="@+id/add_book_newprice"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/text_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="数量："
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
            <EditText
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:inputType="number"
                android:id="@+id/add_book_number"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="分    类："
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
            <Button
                android:background="@color/white"
                android:hint="点击选择分类"
                android:textColorHint="@color/gray"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:id="@+id/add_book_kind"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="新旧："
                android:textColor="@color/black"
                android:gravity="center_vertical" />
            <Button
                android:background="@color/white"
                android:textColorHint="@color/gray"
                android:hint="点击选择新旧"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:id="@+id/add_book_qulity"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="联系方式："
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
            <EditText
                android:hint="如微信／123456"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:id="@+id/add_user_contact"
                android:gravity="center_vertical"
                android:textColorHint="@color/gray"
                android:textSize="15sp"/>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发布"
        android:background="@color/cyan"
        android:gravity="center"/>

</LinearLayout>